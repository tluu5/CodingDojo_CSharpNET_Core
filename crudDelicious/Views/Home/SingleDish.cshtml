@model Dish
<div class="text-center">
    <a href="/">Home</a>
    <form action="/dishes/@Model.DishId" method="post">
        <div class="form-group">
            @Model.Name
            <br>
            @Model.Chef
            <br>
            @Model.Description
            <br>
            @Model.Calories
            <br>
            @Model.Tastiness
        </div>
        <div class="form-group">
            <a href="/dishes/remove/@Model.DishId">Remove</a>
            <br>
            <a href="/dishes/edit/@Model.DishId">Edit</a>
        </div>
    </form>
</div>