@{
    ViewData["Title"] = "Song Page";
}
@model Song

<div class="text-center">
    <div class="row">
        <div class="col-6">
            <h2>Add a Song</h2>
            <form action="/song/create" method="post">
                <div class="form-group">
                    <label for="Title">Title</label>
                    <input asp-for="Title" class="form-control">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label for="Minutes">Duration</label>
                    <div class="row">
                        <input asp-for="Minutes" class="form-control col-3">
                        <span> : </span>
                        <input asp-for="Seconds" class="form-control col-3">
                    </div>
                    <span asp-validation-for="Minutes"></span>
                    <span asp-validation-for="Seconds"></span>
                </div>
                <div class="form-group">
                    <label for="ArtistId">Artist</label>
                    <select asp-for="ArtistId" class="form-control">
                        @foreach (Artist a in ViewBag.AllArtists)
                        {
                            <option value="@a.ArtistId">@a.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary">
                </div>
            </form>
        </div>
        <div class="col-6">
            <h2>All Songs</h2>
            <ul>
                @foreach (Song a in ViewBag.AllSongs)
                {
                    <li>@a.Title (@a.Minutes:@a.Seconds.ToString("00")) by @a.Performer.Name</li>
                }
            </ul>
        </div>
    </div>
</div>
