@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="text-center">
    <h1>My form</h1>
    <form action="postForm" method="post">
        <div class="form-group">
            <label for="Name">Name</label>
            <input class="form-control" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label for="FavColor">Favorite Color</label>
            <input class="form-control" asp-for="FavColor">
            <span class="text-danger" asp-validation-for="FavColor"></span>
        </div>
        <div class="form-group">
            <label for="FavNumber">Favorite Number</label>
            <input class="form-control" asp-for="FavNumber">
            <span class="text-danger" asp-validation-for="FavNumber"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="submit">
        </div>
    </form>
</div>
