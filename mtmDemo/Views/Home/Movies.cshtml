@model Movie

<div class="text-center">
    <div class="text-center">
        <div class="row">
            <div class="col-6">
                <h2>Add a Movie</h2>
                <form action="/movie/add" method="post">
                    <div class="form-group">
                        <label for="Title">Title</label>
                        <input asp-for="Title" class="form-control">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="ReleaseYear">Release Year</label>
                        <input asp-for="ReleaseYear" class="form-control">
                        <span asp-validation-for="ReleaseYear" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="Submit" class="btn btn-info">
                    </div>
                </form>
            </div>
            <div class="col-6">
                <h2>List of Movies</h2>
                @foreach(Movie a in ViewBag.AllMovies)
                {
                    <h4><a href="/movie/@a.MovieId">@a.Title (@a.ReleaseYear)</a></h4>
                }
            </div>
        </div>
    </div>
</div>